<% provide(:title, 'Rooms') %>
<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.name %></td>
    <td><%= room.location %></td>
    <td><%= room.description %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Delete', room, method: :delete, remote: true, class: "triger" %></td>
  </tr>
<% end %>
</table>

<br />


<p id="notice"><%= notice %></p>

<p>
	<b>Customer:</b>
	<%= "#{@customer.first} #{@customer.last}" %>
</p>
<p>
  <b>Email:</b>
  <%= @customer.email %>
</p>
<ul>
	<% if @customer.telephones.any? 
		for telephone in @customer.telephones %>
			<li>
				<%= formated_phone(telephone.number) %>&nbsp;
				<%= telephone.description %>
			</li>
		<% end %>
	<% end %>
</ul>
<% if @customer.addresses.any? %>
<p>
    <b>Address:</b>
    <%= "#{@mailing.street}" %></br> 
	<%= "#{@mailing.city}, #{@mailing.state} #{@mailing.zip}" %>	
</p>
<% end %> 
   <h4>Students:</h4>
<p>
	<ul>
	<% if @students.any? %>
     	<% for student in @students %> 
	 		<li>
 				<%= link_to "#{student.first} #{student.last}", customer_student_path(@customer, student) %>
			</li>
		<% end %>
	<% end %>
	</ul>
  </p>

<%= link_to 'Edit Customer Info', edit_customer_path(@customer) %> |
<%= link_to 'Add Student', new_customer_student_path(@customer) %> |
<%= link_to 'List Customers', customers_path %> |

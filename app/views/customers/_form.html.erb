<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first %>
    <%= f.text_field :first, class: "live_search_field", autocomplete: "off" %>
  </div>
  <div class="field">
    <%= f.label :last %>
    <%= f.text_field :last, class: "live_search_field", autocomplete: "off" %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, autocomplete: "off" %>
  </div>
  <%= f.fields_for :telephones do |builder| %>
    <%= render "telephone_fields", :f => builder %>
  <% end %>
  <div>
   <%= link_to_add_fields "Add Telephone", f, :telephones %>
 </div>
  <div class="actions">
    <%= f.submit submit_button_message(yield(:button_message)), class: "btn btn-large btn-primary" %>
  </div>
<% end %>

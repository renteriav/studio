<%= form_for [@lesson, @attendance], :html => {'data-ajax' => 'false'} do |f| %>
	<fieldset data-role="controlgroup" data-mini="true">
	<label class="radio">
	<%= f.radio_button :status, "s" %>Scheduled
	</label>  
	<label class="radio">
		<%= f.radio_button :status, "a" %>Attended
	</label>
	<label class="radio">
		<%= f.radio_button :status, "m" %>Missed
	</label>
	<label class="radio" id="cancel-radio-label">
		<%= f.radio_button :status, "c", id: "cancel_radio" %>Canceled
	</label>
</fieldset>
	<label class = "checkbox disabled_input" id="cancel-cbx-label">
		<%= check_box_tag "cancelation_email", "send", false, disabled: true, id: "cancel_cbx" %><i>Send cancelation email</i>   
	</label>
	<%= f.hidden_field :date, :value => @date %>
	<%= f.hidden_field :teacher_id, :value => @teacher_id %>

	<% mobile_device? ? @display = "block" : @display = "none" %>
  <div class="actions" style="display: <%= @display %>;">
    <%= f.submit submit_button_message('save'), class: "btn btn-large btn-primary link-class", id: "submit" %>
  </div>
<% end %>

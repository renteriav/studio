<% provide(:title, 'Lessons') %>
<table>
  <tr>
    <th>Student</th>
    <th>Teacher</th>
    <th>Instrument</th>
    <th>Weekday</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Frequency</th>
    <th>Start date</th>
    <th>End date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lessons.each do |lesson| %>
  <tr>
    <td><%= lesson.student_id %></td>
    <td><%= lesson.teacher_id %></td>
    <td><%= lesson.instrument_id %></td>
    <td><%= lesson.weekday %></td>
    <td><%= lesson.start_time %></td>
    <td><%= lesson.end_time %></td>
    <td><%= lesson.frequency %></td>
    <td><%= lesson.start_date %></td>
    <td><%= lesson.end_date %></td>
    <td><%= link_to 'Show', lesson %></td>
    <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
    <td><%= link_to 'Destroy', lesson, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />


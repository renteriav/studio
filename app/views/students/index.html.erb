<% provide(:title, 'Students') %>
<table class="table table-hover">
  <tr>
    <th>First</th>
    <th>Last</th>
    <th>Cell</th>
    <th>Email</th>
    <th>Birthdate</th>
    <th class = "center">Grade</th>
    <th>Customer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% for student in @students %>
    <tr>
      <td><%= student.first %></td>
      <td><%= student.last %></td>
      <td><%= student.cell %></td>
      <td><%= student.email %></td>
      <td><%= student.birthdate.strftime('%b %d, %Y') %></td>
      <td class = "center"><%= student.grade %></td>
      <td><%= student.customer_id %></td>
      <td><%= link_to 'Show', student %></td>
      <td><%= link_to 'Edit', edit_student_path(student) %></td>
      <td><%= link_to 'Destroy', student, method: :delete, remote: true, class: "triger" %></td>
      </tr>
    <% end %>
</table>
<%= render :partial => 'shared/alert' %>
      
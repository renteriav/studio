<h1>Sign in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div><%= f.label :email, class: "field" %>
  <%= f.email_field :email, autofocus: true, class: "field" %></div>

  <div><%= f.label :password, class: "field" %>
    <%= f.password_field :password, autocomplete: "off", class: "field" %></div>

  <% if devise_mapping.rememberable? -%>
    <label class = "checkbox"><%= f.check_box :remember_me, class: "field" %>Remember me</label>
  <% end -%>

  <div><%= f.submit "Sign in", class: "actions btn btn-large btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>

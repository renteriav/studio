$(document).ready(function(){
	
	$('.sharing-search').change(function(){
		$.ajax({
	    	url: "/sharing_search",
	        data: {
	          year : $('#date_year').val(),
			  month : $("#date_month").val(),
			  student_id : $("#hidden_field").val(),
			  detailed_sharing_id : $("#hidden_field_2").val()
	        },
	        type: "GET",
			success: function(result)
			{
				$('#sharing-result').html(result).show();
			}
	   	});
	});
	
	$('.sharing-cbx').change(function(){
		$(":submit").trigger('click');
	});
});
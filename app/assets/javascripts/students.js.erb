$(document).ready(function(){
	
	$('.date-search').change(function(){
		$.ajax({
	    	url: "/attendance_search",
	        data: {
	          year : $('#date_year').val(),
			  month : $("#date_month").val(),
			  id : $("#hidden_field").val()
	        },
	        type: "GET",
			success: function(result)
			{
				$('#attendance_result').html(result).show();
			}
	   	});
	});
});